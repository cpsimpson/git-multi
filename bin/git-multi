#!/bin/bash

if [ ! -n "$1" ]; then
    echo "Pass the multi command."
    exit 1
fi

command=$1
shift

case "$command" in
    add*)
        /storage/git-multi/bin/git-multi-add "$@"
    ;;
    work*)
        /storage/git-multi/bin/git-multi-work "$@"
    ;;
    run*)
        /storage/git-multi/bin/git-multi-run "$@"
    ;;
    *)
        echo "Pass the multi command."
        exit 1
    ;;
esac
